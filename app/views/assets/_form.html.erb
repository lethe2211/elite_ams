<%= form_for @asset, :html => { :class => "form-horizontal asset" } do |f| %>

    <% if @asset.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@asset.errors.count, "error") %> prohibited this asset from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @asset.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :room_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :room_id, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:room_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :asset_category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :asset_category_id, :class => 'form-control' %>
    </div>
    <%= error_span(@asset[:asset_category_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            assets_path, :class => 'btn btn-default' %>

<% end %>
