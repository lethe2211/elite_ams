<% content_for :title, "Report an issue - Description" %>

<h1>Issue?</h1>

<%= form_tag(report_issue_thank_you_path, method: "post") do %>
  <div class="form-group">
    <%= label_tag(:room_id, "Room") %>
    <%= select_tag(:room_id, options_for_select({@room.name => @room.id}), {readonly: true, class: "form-control"}) %>
  </div>
  <div class="form-group">
    <%= label_tag(:asset_category_id, "Asset category") %>
    <%= select_tag(:asset_category_id, options_for_select({@asset_category.name => @asset_category.id}), {readonly: true, class: "form-control"}) %>
  </div>
  <div class="form-group">
    <%= label_tag(:asset_id, "Asset") %>
    <%= select_tag(:asset_id, options_for_select({@asset.description => @asset.id}), {readonly: true, class: "form-control"}) %>
  </div>
  <div class="form-group">
    <%= label_tag(:description, "Description of the issue") %>
    <%= text_area_tag(:description, "", {class: "form-control"}) %>
  </div>
  <%= submit_tag("submit", class: "btn btn-success btn-block") %>
<% end %>
